# Select region screenshot
#bindsym $mod+Print exec grim -g "$(slurp)" ~/Pictures/screenshots/screenshot_$(date +'%Y-%m-%d_%H-%M-%S').png && notify-send "Screenshot Taken" "Region screenshot saved"

# start a terminal
bindsym $mod+Return exec --no-startup-id kitty

# ibus
bindsym $mod+Shift+b exec blueman-manager

# Network Manager Applet
bindsym $mod+Shift+n exec --no-startup-id nm-applet

# Rofi
bindsym $mod+d exec --no-startup-id rofi -show drun -disable-history -show-icons
bindsym Mod1+d exec --no-startup-id rofi -show run -disable-history
bindsym Mod1+w exec rofi -show window -show-icons
bindsym $mod+i exec rofi -modi emoji -show emoji


# kill focused window
bindsym $mod+q kill

# exit-menu
bindsym $mod+Shift+e exec ~/scripts/power.sh

# Lock the system
bindsym $mod+Shift+l exec swaylock -i ~/.config/walls/VIM.png
bindsym $mod+Shift+x exec "swaylock -i ~/Pictures/lock.png && systemctl suspend"

# reload the configuration file
bindsym $mod+Shift+r exec swaymsg reload 

# Funtions Keys
# Brightness
bindsym XF86MonBrightnessUp exec brightnessctl set +10%
bindsym XF86MonBrightnessDown exec brightnessctl set 10%-


# Volume control keybindings
bindsym XF86AudioRaiseVolume exec amixer -q sset Master 10%+ unmute
bindsym XF86AudioLowerVolume exec amixer -q sset Master 10%- unmute
bindsym XF86AudioMute exec amixer -q sset Master toggle

