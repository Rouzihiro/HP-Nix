#####################
# workspace layout: #
#####################
# default i3 tiling mode:
workspace_layout default

##############################
#border indicator on windows:
##############################
default_border pixel 1

# thin borders
hide_edge_borders both

# Monitor resolution set to 1920x1200
output eDP-1 resolution 1920x1200


# Disable internal screen and use external monitor only
bindsym $mod+Shift+h output eDP-1 disable

# Enable both screens with the external monitor as extended
bindsym $mod+Shift+m output eDP-1 enable; output HDMI-A-1 enable

# fireplace
bindsym $mod+Shift+f exec --no-startup-id ~/scripts/fireplace

# Background
exec_always --no-startup-id swaybg -i ~/Pictures/mountain1.jpg -m fill

# Notification daemon
exec --no-startup-id dunst

