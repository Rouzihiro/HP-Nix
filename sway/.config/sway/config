    natural_scroll enabled
    tap enabled
}

input * {
    xkb_layout "de"
}

exec swayidle -w \
    timeout 300 'systemctl suspend' \
    timeout 600 'systemctl hibernate' \
    resume 'swaymsg resume' \
    before-sleep 'swaylock'


